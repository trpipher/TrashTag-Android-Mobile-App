<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFF3D4"
    tools:context=".MainMenu">

    <ImageView
        android:id="@+id/logo"
        android:layout_width="267dp"
        android:layout_height="221dp"
        android:layout_marginStart="72dp"
        android:layout_marginBottom="8dp"
        android:adjustViewBounds="true"
        android:contentDescription="@string/logo"
        app:layout_constraintBottom_toTopOf="@+id/profile_id"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@mipmap/trashtag_logo_foreground" />

    <Button
        android:id="@+id/profile_id"
        android:layout_width="267dp"
        android:layout_height="51dp"
        android:layout_marginTop="344dp"
        android:background="#8EE22C"
        android:fontFamily="@font/basic"
        android:text="@string/my_profile"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnMap" />

    <Button
        android:id="@+id/settings_id"
        android:layout_width="129dp"
        android:layout_height="43dp"
        android:layout_marginTop="56dp"
        android:background="#8EE22C"
        android:fontFamily="@font/basic"
        android:text="@string/settings"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="@+id/profile_id"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/profile_id"
        app:layout_constraintTop_toBottomOf="@+id/profile_id" />

    <Button
        android:id="@+id/btnMap"
        android:layout_width="267dp"
        android:layout_height="55dp"
        android:layout_marginTop="36dp"
        android:background="#8EE22C"
        android:fontFamily="@font/acme"
        android:text="@string/mapBtnText"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/about_id"
        android:layout_width="129dp"
        android:layout_height="43dp"
        android:layout_marginTop="56dp"
        android:background="#8EE22C"
        android:fontFamily="@font/basic"
        android:text="@string/about"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="@+id/profile_id"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/profile_id"
        app:layout_constraintTop_toBottomOf="@+id/profile_id" />

    <TextView
        android:id="@+id/editText"
        android:layout_width="207dp"
        android:layout_height="82dp"
        android:ems="10"
        android:fontFamily="@font/pacifico"
        android:hint="@string/trashtag"
        android:inputType="textPersonName"
        android:text="@string/trashtag"
        android:textSize="40sp"
        app:layout_constraintBottom_toTopOf="@+id/logo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnMap"
        android:autofillHints="" />

</androidx.constraintlayout.widget.ConstraintLayout>