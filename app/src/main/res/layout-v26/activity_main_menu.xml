<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#B8E2B6"
    tools:context=".MainMenu">

    <ImageView
        android:id="@+id/logo"
        android:layout_width="267dp"
        android:layout_height="221dp"
        android:adjustViewBounds="true"
        android:contentDescription="@string/logo"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnMap"
        app:layout_constraintVertical_bias="0.321"
        app:srcCompat="@mipmap/trashtag_logo_foreground" />

    <Button
        android:id="@+id/profile_id"
        android:layout_width="129dp"
        android:layout_height="43dp"
        android:layout_marginTop="8dp"
        android:background="#8EE22C"
        android:fontFamily="@font/basic"
        android:text="@string/my_profile"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@+id/logo"
        app:layout_constraintTop_toBottomOf="@+id/logo"
        app:layout_constraintVertical_bias="0.003" />

    <Button
        android:id="@+id/settings_id"
        android:layout_width="274dp"
        android:layout_height="1dp"
        android:background="#8EE22C"
        android:fontFamily="@font/basic"
        android:text="@string/settings"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/btnMap"
        android:layout_width="267dp"
        android:layout_height="55dp"
        android:layout_marginTop="60dp"
        android:background="#8EE22C"
        android:fontFamily="@font/acme"
        android:text="@string/mapBtnText"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.479"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/about_id"
        android:layout_width="129dp"
        android:layout_height="43dp"
        android:layout_marginTop="8dp"
        android:background="#8EE22C"
        android:fontFamily="@font/basic"
        android:text="@string/about"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/logo"
        app:layout_constraintTop_toBottomOf="@+id/logo"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/editText"
        android:layout_width="299dp"
        android:layout_height="119dp"
        android:autofillHints=""
        android:ems="10"
        android:fontFamily="@font/pacifico"
        android:hint="@string/trashtag"
        android:inputType="textPersonName"
        android:text="@string/trashtag"
        android:textColor="#29960E"
        android:textSize="60sp"
        app:layout_constraintBottom_toTopOf="@+id/logo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnMap" />

</androidx.constraintlayout.widget.ConstraintLayout>